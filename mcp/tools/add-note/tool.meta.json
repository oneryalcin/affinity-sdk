{
  "name": "add-note",
  "description": "Add a note to a person, company, or opportunity. Notes are visible to all team members with access to the entity.",
  "inputSchema": {
    "type": "object",
    "required": ["content"],
    "properties": {
      "content": {
        "type": "string",
        "description": "Note content (plain text or markdown)"
      },
      "entity": {
        "type": "object",
        "description": "Entity reference object",
        "properties": {
          "type": {"enum": ["person", "company", "opportunity"]},
          "id": {"type": "integer"}
        }
      },
      "entityId": {
        "type": "integer",
        "description": "Entity ID (alternative to entity object)"
      },
      "entityType": {
        "type": "string",
        "enum": ["person", "company", "opportunity"],
        "description": "Entity type (used with entityId)"
      },
      "creatorId": {
        "type": "integer",
        "description": "Creator person ID (defaults to API key owner)"
      }
    }
  },
  "annotations": {
    "readOnlyHint": false,
    "destructiveHint": false,
    "openWorldHint": true
  },
  "timeoutSecs": 15
}
