{
  "name": "find-entities",
  "description": "Search for persons, companies, or opportunities by name or email. Returns bounded candidates with display info.",
  "inputSchema": {
    "type": "object",
    "required": ["query"],
    "properties": {
      "query": {
        "type": "string",
        "description": "Search query (name, email, or domain)"
      },
      "types": {
        "type": "array",
        "items": {"enum": ["person", "company", "opportunity"]},
        "default": ["person", "company"],
        "description": "Entity types to search"
      },
      "limit": {
        "type": "integer",
        "default": 10,
        "minimum": 1,
        "maximum": 50,
        "description": "Maximum results to return"
      }
    }
  },
  "annotations": {
    "readOnlyHint": true,
    "openWorldHint": true
  },
  "timeoutSecs": 30
}
