{
  "name": "find-lists",
  "description": "Search for Affinity lists by name or type. Lists are workflow containers for persons, companies, or opportunities.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "query": {
        "type": "string",
        "description": "Search query to filter list names (case-insensitive)"
      },
      "type": {
        "type": "string",
        "enum": ["person", "company", "opportunity"],
        "description": "Filter by list type"
      },
      "limit": {
        "type": "integer",
        "default": 20,
        "minimum": 1,
        "maximum": 100,
        "description": "Maximum results to return"
      }
    }
  },
  "annotations": {
    "readOnlyHint": true
  },
  "timeoutSecs": 15
}
