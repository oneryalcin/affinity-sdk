{
  "name": "get-interactions",
  "description": "Get interactions (calls, meetings, emails, etc.) for a person, company, or opportunity.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "entity": {
        "type": "object",
        "description": "Entity reference object",
        "properties": {
          "type": {"enum": ["person", "company", "opportunity"]},
          "id": {"type": "integer"}
        }
      },
      "entityId": {
        "type": "integer",
        "description": "Entity ID (alternative to entity object)"
      },
      "entityType": {
        "type": "string",
        "enum": ["person", "company", "opportunity"],
        "description": "Entity type (used with entityId)"
      },
      "type": {
        "type": "string",
        "enum": ["call", "meeting", "email", "chat_message", "in_person"],
        "description": "Filter by interaction type"
      },
      "limit": {
        "type": "integer",
        "default": 20,
        "minimum": 1,
        "maximum": 100,
        "description": "Maximum interactions to return"
      }
    }
  },
  "annotations": {
    "readOnlyHint": true
  },
  "timeoutSecs": 15
}
