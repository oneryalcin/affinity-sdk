{
  "name": "get-relationship-insights",
  "description": "Get relationship insights for a person including relationship strength score and potential warm intro paths through shared connections.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "targetEntity": {
        "type": "object",
        "description": "Target entity reference",
        "properties": {
          "type": {"enum": ["person"]},
          "id": {"type": "integer"}
        }
      },
      "targetId": {
        "type": "integer",
        "description": "Target person ID (alternative to targetEntity)"
      },
      "targetType": {
        "type": "string",
        "enum": ["person"],
        "default": "person",
        "description": "Target entity type"
      },
      "sourceId": {
        "type": "integer",
        "description": "Source person ID (your team member) to find shared connections"
      }
    }
  },
  "annotations": {
    "readOnlyHint": true,
    "openWorldHint": true
  },
  "timeoutSecs": 30
}
