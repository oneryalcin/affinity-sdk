{
  "name": "get-status-timeline",
  "description": "Get the status change history for a workflow item. Shows when the status was changed, what it changed from/to, and who made the change.",
  "inputSchema": {
    "type": "object",
    "required": ["listId", "listEntryId"],
    "properties": {
      "listId": {
        "type": "integer",
        "description": "List ID"
      },
      "listEntryId": {
        "type": "integer",
        "description": "List entry ID"
      },
      "limit": {
        "type": "integer",
        "default": 20,
        "minimum": 1,
        "maximum": 100,
        "description": "Maximum changes to return"
      }
    }
  },
  "annotations": {
    "readOnlyHint": true,
    "openWorldHint": true
  },
  "timeoutSecs": 15
}
