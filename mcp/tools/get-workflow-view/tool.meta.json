{
  "name": "get-workflow-view",
  "description": "Get items from a workflow list or saved view. Returns list entries with their current status and field values.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "listId": {
        "type": "integer",
        "description": "List ID (preferred)"
      },
      "listName": {
        "type": "string",
        "description": "List name (alternative to listId)"
      },
      "viewId": {
        "type": "integer",
        "description": "Saved view ID to filter results"
      },
      "viewName": {
        "type": "string",
        "description": "Saved view name (alternative to viewId)"
      },
      "limit": {
        "type": "integer",
        "default": 50,
        "minimum": 1,
        "maximum": 500,
        "description": "Maximum items to return"
      }
    }
  },
  "annotations": {
    "readOnlyHint": true,
    "openWorldHint": true
  },
  "timeoutSecs": 60
}
