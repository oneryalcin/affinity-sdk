{
  "name": "resolve-workflow-item",
  "description": "Resolve an entity to its list entry ID(s) on a specific list. Use this when you have an entity reference but need the listEntryId for updates. Returns all matching entries if multiple exist.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "listId": {
        "type": "integer",
        "description": "List ID (preferred)"
      },
      "listName": {
        "type": "string",
        "description": "List name (alternative to listId)"
      },
      "entity": {
        "type": "object",
        "description": "Entity reference object",
        "properties": {
          "type": {"enum": ["person", "company", "opportunity"]},
          "id": {"type": "integer"}
        }
      },
      "entityId": {
        "type": "integer",
        "description": "Entity ID (alternative to entity object)"
      },
      "entityType": {
        "type": "string",
        "enum": ["person", "company", "opportunity"],
        "description": "Entity type (used with entityId)"
      }
    }
  },
  "annotations": {
    "readOnlyHint": true
  },
  "timeoutSecs": 15
}
